<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageSearch"
        android:src="@drawable/profileimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
       />

    <TextView
        android:id="@+id/fullNameOnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/profileImageSearch"
        android:text="@string/username"
        android:textColor="#555555"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailAdrressSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullNameOnSearch"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/profileImageSearch"
        android:text="@string/e_mail_address"
        android:textColor="#999999"
        android:textSize="14sp" />


</RelativeLayout>